# Disable window titlebars entirely
for_window [class="^.*"] border pixel 2

# Set gaps
gaps inner 20

mode "Gaps Mode" {
        bindsym l gaps inner all set 0
        bindsym m gaps inner all set 20
        bindsym h gaps inner all set 45

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+g mode "default"
}

bindsym $mod+g mode "Gaps Mode"

