# launch common apps
mode "App Launch" {
        bindsym a exec alacritty ; mode "default"
        bindsym b exec chromium ; mode "default"
        bindsym f exec nautilus ; mode "default"
        bindsym t exec telegram-desktop ; mode "default"
        bindsym s exec slack ; mode "default"
        bindsym e exec geary ; mode "default"
        bindsym d exec discord ; mode "default"
        bindsym v exec virtualbox ; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+a mode "default"
}

bindsym $mod+a mode "App Launch"
